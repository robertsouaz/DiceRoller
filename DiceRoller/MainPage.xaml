<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DiceRoller.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                x:Name="DadoImage"
                Source="um.png"
                HeightRequest="225"                
                />
            <Picker
                x:Name="SelecaoPicker"
                Title="Escolha um lado do dado">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Um</x:String>
                        <x:String>dois</x:String>
                        <x:String>Tres</x:String>
                        <x:String>Quatro</x:String>
                        <x:String>Cinco</x:String>
                        <x:String>Seis</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
                />
            <Button
                x:Name="JogueButton"
                Text="Jogue o dado"
                Clicked="JogueButton_Clicker"
                HorizontalOptions="Fill"
                />


